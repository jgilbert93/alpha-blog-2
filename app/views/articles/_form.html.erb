<% if @article.errors.any? %>
<h2>The following errors prevented the articles from being created</h2>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>
<% end %>

<div class="row">
    <div class="col-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group row">
                <div class="col-2 col-form-label">
                    <%= f.label :title %>
                </div>
                <div class="col-10">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
                </div>
            </div>    
            <div class="form-group row">
                <div class="col-2 col-form-label">
                    <%= f.label :description %>
                </div>
                <div class="col-10">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col">
                    <%= f.submit class:"btn btn-primary btn-lg" %>
                </div>
            </div>
        <% end %>
        <div class="col" align="center">
            [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
        </div>
    </div>
</div>