<h1 align="center">Create new Category</h1>

<%= render "shared/errors", obj: @category %>
   
        <%= form_for @category do |f| %>
        <div class="form-group row">
                <div class="col-sm-2 col-form-label">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
                </div>
        </div>
        <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <%= f.submit class:"btn btn-primary btn-md" %>
                </div>
        </div>
        <% end %>
        <div class="col-sm-5 offset-sm-4">
            [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
        </div>